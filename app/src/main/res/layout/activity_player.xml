<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout">

    <ScrollView
        android:layout_width="403dp"
        android:layout_height="732dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pd_2"
            android:paddingRight="@dimen/pd_2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/mg_2"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="@dimen/btn_height"
                    android:layout_height="@dimen/btn_height"
                    android:background="@drawable/bg_image_btn"
                    android:contentDescription="@string/back"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSongNamePlayer"
                    style="@style/h1"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/topbar_player"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toEndOf="@+id/imageButton"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgDisc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mg_4"
                android:src="@drawable/music_disc"
                android:contentDescription="@string/disc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mg_2"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/thumb_seekbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="00:00"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="00:11"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/pd_2"
                android:paddingRight="@dimen/pd_2"
                android:paddingTop="@dimen/pd_2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgPre"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/mg_2"
                    android:src="@drawable/ic_previous"
                    android:contentDescription="@string/player_btn"/>

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/mg_2"
                    android:src="@drawable/ic_play"
                    android:contentDescription="@string/player_btn"/>

                <ImageView
                    android:id="@+id/imgNext"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/mg_2"
                    android:src="@drawable/ic_next"
                    android:contentDescription="@string/player_btn"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>