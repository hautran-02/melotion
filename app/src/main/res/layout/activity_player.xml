<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/pd_2"
            android:paddingRight="@dimen/pd_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/mg_2"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphCardView
                    style="@style/bg_primary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="@dimen/btn_height"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/bg_image_btn"
                        android:contentDescription="@string/back"
                        android:padding="@dimen/pd_1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_back" />
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    style="@style/bg_primary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70">

                    <TextView
                        android:id="@+id/tvSongNamePlayer"
                        style="@style/h1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingLeft="@dimen/pd_2"
                        android:paddingRight="@dimen/pd_2"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/topbar_player"
                        android:textAlignment="center"
                        app:layout_constraintStart_toEndOf="@+id/imageButton"
                        app:layout_constraintTop_toTopOf="parent" />
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    style="@style/bg_primary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <ImageButton
                        android:id="@+id/imageOptions"
                        android:layout_width="@dimen/btn_height"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/bg_image_btn"
                        android:contentDescription="@string/back"
                        android:padding="@dimen/pd_1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_back" />
                </soup.neumorphism.NeumorphCardView>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDisc"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/rangkhon"
                app:civ_border_color="#595959"
                app:civ_border_overlay="true"
                app:civ_border_width="50dp"
                android:foreground="@drawable/circle_small"
                android:foregroundGravity="center"
                android:src="@drawable/rangkhon"
                app:civ_border_color="#595959"
                app:civ_border_overlay="true"
                app:civ_border_width="50dp" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:padding="2dp"
                android:src="@drawable/ic_favorite_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mg_2"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/thumb_seekbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="00:11"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/pd_2"
                android:paddingTop="@dimen/pd_2"
                android:paddingRight="@dimen/pd_2">

                <ImageView
                    android:id="@+id/imgPre"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/mg_2"
                    android:contentDescription="@string/player_btn"
                    android:src="@drawable/ic_previous" />

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/mg_2"
                    android:contentDescription="@string/player_btn"
                    android:src="@drawable/ic_play" />

                <ImageView
                    android:id="@+id/imgNext"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/mg_2"
                    android:contentDescription="@string/player_btn"
                    android:src="@drawable/ic_next" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>