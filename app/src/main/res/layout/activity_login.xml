<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lout_bg">

    <EditText
        android:id="@+id/edLoginPw"
        android:layout_width="246dp"
        android:layout_height="63dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ed_layout"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLoginPhone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="175dp"
        android:layout_height="64dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:text="Đăng nhập"
        android:textAlignment="center"
        android:textColor="@color/pri_red"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edLoginPhone"
        android:layout_width="248dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/ed_layout"
        android:ems="10"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        style="@style/button"
        android:layout_width="237dp"
        android:layout_height="58dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/pri_red"
        android:text="Đăng nhập"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLoginPw" />

    <TextView
        android:id="@+id/tvToRegister"
        style="@style/h2"
        android:layout_width="265dp"
        android:layout_height="32dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:text="Đăng ký tài khoản"
        android:textAlignment="center"
        android:textColor="@color/pri_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>