<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/bg_layout"
            android:layout_height="?attr/actionBarSize">


            <ImageButton
                android:id="@+id/ibBackSearching"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/pd_2"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/back"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edSearching"
                style="@style/h1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/user_list"
                android:textColor="@color/primary"
                android:textColorHint="@color/primary"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/btnForwardAddSong"
                android:layout_width="49dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add"
                app:layout_constraintEnd_toEndOf="@+id/edSearching"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Note: A RecyclerView can also be used -->

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="@color/bg_layout">
        <TextView
            android:id="@+id/tvNumber"
            style="@style/table"
            android:layout_weight="0.16"
            android:text="@string/number"/>

        <TextView
            android:id="@+id/tvFirstName"
            style="@style/table"
            android:layout_weight="0.21"
            android:text="@string/first_name"/>

        <TextView
            android:id="@+id/tvLastName"
            style="@style/table"
            android:layout_weight="0.21"
            android:text="@string/last_name"/>

        <TextView
            android:id="@+id/tvEmail"
            style="@style/table"
            android:layout_weight="0.21"
            android:text="@string/email"/>

        <TextView
            android:id="@+id/tvPhone"
            style="@style/table"
            android:layout_weight="0.21"
            android:text="@string/phone"/>
        </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="567dp"
        android:layout_gravity="fill_vertical"
        android:paddingTop="@dimen/pd_2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Scrollable content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvUserListManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>