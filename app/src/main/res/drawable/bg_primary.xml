<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Shadow effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="4dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>